<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Gerardo_Helloworld>
            <version>0.0.2</version>
        </Gerardo_Helloworld>
    </modules>
    <global>
        <blocks>
            <helloworld>
                <class>Gerardo_Helloworld_Block</class>
            </helloworld>
        </blocks>
        <helpers>
            <helloworld>
                <class>Gerardo_Helloworld_Helper</class>
            </helloworld>
        </helpers>
        <models>
            <helloworld>
                <class>Gerardo_Helloworld_Model</class>
                <resourceModel>helloworld_resource</resourceModel>
            </helloworld>
            <helloworld_resource>
                <class>Gerardo_Helloworld_Model_Resource</class>
                <entities>
                    <subscription>
                        <table>helloworld_subscription</table>
                    </subscription>
                </entities>
            </helloworld_resource>
            <catalog>
                <rewrite>
                    <product>Gerardo_Helloworld_Model_Catalog_Product</product>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <helloworld_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </helloworld_read>
            <helloworld_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </helloworld_write>
            <helloworld_setup>
                <setup>
                    <module>Gerardo_Helloworld</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </helloworld_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <helloworld>
                <use>standard</use>
                <args>
                    <module>Gerardo_Helloworld</module>
                    <frontName>helloworld</frontName>
                </args>
            </helloworld>
        </routers>
        <layout>
            <updates>
                <helloworld>
                 <file>helloworld.xml</file>
             </helloworld>
         </updates>
     </layout>
     <translate>
        <modules>
            <Gerardo_Helloworld>
                <files>
                    <default>Gerardo_Helloworld.csv</default>
                </files>
            </Gerardo_Helloworld>
        </modules>
    </translate>
</frontend>
        <admin>
            <routers>
                <adminhtml>
                    <args>
                        <modules>
                            <Gerardo_Helloworld before="Mage_Adminhtml">Gerardo_Helloworld_Adminhtml</Gerardo_Helloworld>
                        </modules>
                    </args>
                </adminhtml>
            </routers>
        </admin>
